---
const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";

---
<BaseLayout pageTitle={frontmatter.title}>
    
<div class="blogInfo"> <p>Written by {frontmatter.author}</p>
<p>Published on {frontmatter.pubDate.slice(0,10)}</p></div>   
<slot />
<div class="imageContainer" style="width:300px;">
<img src={frontmatter.image.url} style="max-width:100%;"/>
</div>
</BaseLayout>